// Dùng để generate data model. "prisma-client" mặc định generate ra TypeScript nên cần phải thêm "prisma-client-js" để làm việc với JS.
generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

// Cho prisma biết project này đang làm việc với data nào
datasource db {
    provider = "mysql"
}

// Khai báo DB Models
model User {
    id              BigInt    @id @default(autoincrement())
    username        String?   @unique
    email           String    @unique
    password        String
    firstName       String?
    lastName        String?
    avatar          String?
    bio             String?
    websiteUrl      String?
    githubUrl       String?
    isVerified      Boolean   @default(false)
    emailVerifiedAt DateTime?
    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @default(now())

    // [] = Mảng = Nhiều = One-to-Many relationship
    // 1 User có NHIỀU Posts
    // 1 User có NHIỀU Comments 
    // 1 User có NHIỀU RefreshTokens 
    posts         Post[]
    comments      Comment[]
    refreshTokens RefreshToken[]

    @@map("users")
}

model Post {
    id          BigInt    @id @default(autoincrement())
    userId      BigInt
    title       String
    description String    @db.Text
    slug        String    @unique
    image       String
    content     String    @db.Text
    minRead     Int?
    publishedAt DateTime?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @default(now())

    user User @relation(fields: [userId], references: [id])

    @@map("posts")
}

model Comment {
    id        BigInt   @id @default(autoincrement())
    userId    BigInt
    content   String   @db.Text
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    user User @relation(fields: [userId], references: [id])

    @@map("comments")
}

model RefreshToken {
    id        BigInt   @id @default(autoincrement())
    token     String   @unique
    userId    BigInt // ← Foreign key
    userAgent String
    isRevoked Boolean? @default(false)
    expiresAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    // fields: [userId] - local field | id: references field
    user User @relation(fields: [userId], references: [id])

    @@map("refresh_tokens")
}
