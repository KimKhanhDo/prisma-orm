// Dùng để generate data model. "prisma-client" mặc định generate ra TypeScript nên cần phải thêm "prisma-client-js" để làm việc với JS.
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// Cho prisma biết project này đang làm việc với data nào
datasource db {
  provider = "mysql"
}

// Khai báo DB Models
model User {
    id BigInt @id @default(autoincrement())
    email String @unique
    name String?
    posts Post[]
    createdAt DateTime
    updatedAt DateTime

    @@map("users")
}

model Post {
    id BigInt @id @default(autoincrement())
    title String
    slug String @unique
    content String? @db.Text
    user User @relation(fields: [userId], references: [id])
    userId BigInt 
    publishedAt DateTime
    createdAt DateTime
    updatedAt DateTime

    @@map("posts")
}